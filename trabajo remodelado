		scanf("%d",&num_sofa_chester);
		printf("\n Usted ha elegido %d sofa chester \n",num_sofa_chester);
		break;
		case 2:
		printf("Cuantos sofas del tipo chaise longue deseas? \n");
		int num_sofa_chaise;
		scanf("%d",&num_sofa_chaise);
		printf("\n Usted ha elegido %d sofa chaise long \n",num_sofa_chaise);
		break;
		case 3:
		printf("Cuantos sofas cama deseas? \n");
